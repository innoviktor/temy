modules = ["python-3.11", "web"]

[nix]
channel = "stable-25_05"
packages = ["openssl"]

[deployment]
deploymentTarget = "autoscale"
publicDir = ""
run = ["sh", "-c", "gunicorn app:app --bind 0.0.0.0:8080"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload app:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080
